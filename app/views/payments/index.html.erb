<div class='container'>
<h3>Payments</h3>
<div>
  <table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Payment name</th>
      <th>Amount</th>
      <th>Payee</th>
      <th>Expense</th>
      <th>Payment Date</th>
    </tr>
  </thead>
  <tbody class="" >
    <% @payments.each do |payment| %>
    <tr>
      <td><%= payment.payment_name %></td>
      <td><%= payment.payment_amount %></td>
      <td><%= link_to payment.user.first_name, user_path(payment.user) %></td>
      <td><%= payment.expense.name %></td>
      <td><%= payment.expense.created_at %></td>
      <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
      <td><%= link_to 'View', payment_path(payment) %></td>
    <% end %>
    </tr>
  </tbody>
</div>
</table>
</br>
<div><%= link_to 'New Payment', new_payment_path %></div>
<div><%= link_to 'Add New Expense', new_expense_path %></div>
<div><%= link_to 'Logout', logout_path %></div>
</div>