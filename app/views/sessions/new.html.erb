<div>
  <% if flash[:error] %>
    <div class="alert"><%= flash[:error] %></div>
  <% end %>
</div>

<div>
  <div class="">
    <%= form_tag '/login' do %>
      <div class="">
        <%= label_tag :username %>
        <%= text_field_tag :username %>
      </div>
      <div class="">
        <%= label_tag :password, 'Password' %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag 'Login' %>
    <% end %>
  </div>
</div>