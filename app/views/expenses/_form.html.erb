<div class="col-md-2">
    <%= form_for @expense do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :amount %>
        <%= f.text_field :amount, class:'form-control' %>
      </div>
    
      <%= f.submit class:'btn btn-primary' %> 
    <% end %>  
  </div>