<div class="container">

<div>
  <h4><%= @user.first_name %>'s Recent Payments:</h4> 
</div>

<div>
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Payment name </th>
        <th>Payment amount</th>
        <th>Expense name </th>
        <th>Payment date </th>
      </tr>
    </thead>
    <tbody>
      <% @user.payments.each do |payment| %>
      <tr>
        <td><%= link_to payment.payment_name, payment_path(payment) %></td>
        <td><%= number_to_currency payment.payment_amount %></td>
        <td><%= payment.expense.name %></td>
        <td><%= format_date payment.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="">
  <%= link_to 'Enter a new payment', new_payment_path, class: "btn btn-primary" %>
</div>
<br/>
<div class="row well">
  <div class="col-md-3">
    <h5><%= @user.first_name %>'s Payments YTD:</h5>
    <p><%= number_to_currency @user.total_payments %></p>
  </div>
  <div class="col-md-3">
    <h5><%= @user.first_name %>'s Payments MTD:</h5>
    <p><%= number_to_currency @user.payments_this_month %></p>
  </div>
  <div class="col-md-3">
    <h5><%= @user.first_name %>'s TBD:</h5>
    <p><%= number_to_currency @user.total_payments %></p>
  </div>
  <div class="col-md-3">
    <h5><%= @user.first_name %>'s TBD:</h5>
    <p><%= number_to_currency @user.total_payments %></p>
  </div>
</div>
<div>
  <%= render 'payments/expense_table' %>
</div>
</br>
<div>
  <%= link_to 'Add New Expense', new_expense_path, class: "btn btn-primary" %>
</div>
</div>